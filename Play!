Kendrick_turtle.speed(30)
def draw (count):
  if (count == 0):
    Kendrick_turtle.forward(260)
    Kendrick_turtle.right(90)
  elif (count == 1):
    Kendrick_turtle.right(90)
    Kendrick_turtle.forward(130)
    Kendrick_turtle.right(90)
    Kendrick_turtle.forward(520)
  elif (count == 2):
    Kendrick_turtle.right(90)
    Kendrick_turtle.forward(160)
  elif (count == 3):
    Kendrick_turtle.right(90)
    Kendrick_turtle.forward(125)
  elif (count == 4):
   Kendrick_turtle.right(270)
   Kendrick_turtle.circle(26)    

